@model PizzaJuan.Models.DeliveryModel
<!DOCTYPE HTML>
<html>
<head>
    <link rel="stylesheet" href="~/Content/takeout.css">
    <script src="https://kit.fontawesome.com/3017103117.js" crossorigin="anonymous"></script>
</head>

<body>
    <h1>Escoger el restaurante para recoger</h1>
    @using (Html.BeginForm("PostDelivery", "Delivery", FormMethod.Post, new { enctype = "multipart/form-data" })) {
        @Html.AntiForgeryToken()
        @Html.TextBoxFor(model => model.Type, new { @class = "d-none", @Value = "Takeout" })
        <div class="row d-flex">
            @foreach (var item in ViewBag.Restaurants) {
                <button class="choosingRestaurant col-12 d-flex border border-2 border-dark mt-3" type="submit">
                    <p class="col-11 text-md-start mt-3">
                        <i class="fas fa-map-marker-alt"></i>
                        @item.Name: @item.Value
                    </p>
                    <p class="col-1 combosDescription mt-3 text-end">
                        <i class="fas fa-angle-right"></i>
                    </p>
                </button>
            }
        </div>
    }
</body>
</html>


