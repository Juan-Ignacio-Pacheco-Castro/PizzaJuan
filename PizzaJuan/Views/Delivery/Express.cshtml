<head>
    <link rel="stylesheet" href="~/Content/express.css">
</head>

<body>
    <h1>Dirección de envío</h1>
    <div class="row">
        <div class="col-4">
            <span class="small-font fw-bold">Provincia</span>
            <input id="province" class="form-control" />
        </div>

        <div class="col-4">
            <span class="small-font fw-bold">Cantón</span>
            <input id="canton" class="form-control"/>
        </div>

        <div class="col-4">
            <span class="small-font fw-bold">Distrito</span>
            <input id="district" class="form-control" />
        </div>
    </div>
    <div class="row">
        <div class="col-6">
            <span class="small-font fw-bold">Dirección exacta</span>
            <input id="exactDirection" class="form-control" style="width: 100%;" />
        </div>
        <div class="col-6">
            <span class="small-font fw-bold col-12">Teléfono de contacto</span>
            <input id="cellphone" class="form-control" />
        </div>
    </div>
    <div class="row d-flex">
        <div class="col-xl-4 offset-4">
            <button onclick="location.href='/Menu/Menu'" type="button">Continuar con mi orden</button>
        </div>
    </div>
    <script src="~/Scripts/express.js" type="text/javascript"></script>
</body>
